<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} %level{ERROR=!, WARN=?, INFO=-, DEBUG=., TRACE=.} %-30.30logger{1} %msg%n"/>
    </Console>
    <WsLog name="WsLog">
      <PatternLayout pattern="%c{1};%d{mm:ss.SSS} %-10.10c{1}%level{ERROR=!, WARN=?, INFO=-, DEBUG=., TRACE=.} %msg"/>
    </WsLog>
  </Appenders>
  <Loggers>
    <Root level="warn">
      <AppenderRef ref="Console"/>
    </Root>
    <Root level="info">
      <AppenderRef ref="WsLog"/>
    </Root>
  </Loggers>
</Configuration>
